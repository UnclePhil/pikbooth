<style>
  .cards {
    margin-top: 60px;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    flex-direction: row;
    max-height: 100vh;
  }
  .cards img {
    margin: 5px;
    border: 2px solid #000;
    box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3); 
    max-width: 24vw;
  }
  .msg {
    
  }
</style>
<main class="cards">
  {{#if pictures}}
    {{#each pictures}}
        <img src="/pict/{{this}}" >
    {{/each}}  
  {{else}}
  <div class="msg">
    <h2>No picture for the moment</h2>
  </div>  
  {{/if}}
</main>