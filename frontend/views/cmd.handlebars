<style>
  .cards {
    margin-top: 60px;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    flex-direction: column;
    max-height: 100vh;
  }
  .cards img {
    margin: 5px;
    border: 2px solid #000;
    box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3); 
    max-width: 24vw;
  }
  .msg {
    }

  .btnpict{
    margin-top:56px;
  }
</style>

<div class="container-fluid btnpict">
<a href="/photo/cmd" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Take picture</a>
</div>
<main class="cards">
  {{#if pictures}}
    {{#each pictures}}
        <img src="/pict/{{this}}" >
    {{/each}}  
  {{else}}
  <div class="msg">
    <h2>No picture for the moment</h2>
  </div>  
  {{/if}}
</main>